@DPATCH@
diff -urNad '--exclude=CVS' '--exclude=.svn' '--exclude=.git' '--exclude=.arch' '--exclude=.hg' '--exclude=_darcs' '--exclude=.bzr' ledgersmb-1.2.24~/ledgersmb-httpd.conf ledgersmb-1.2.24/ledgersmb-httpd.conf
--- ledgersmb-1.2.24~/ledgersmb-httpd.conf	2011-07-05 07:11:33.000000000 -0400
+++ ledgersmb-1.2.24/ledgersmb-httpd.conf	2011-10-01 16:24:46.000000000 -0400
@@ -1,7 +1,7 @@
 
-Alias /ledgersmb WORKING_DIR
+Alias /ledgersmb /usr/share/ledgersmb/
 
-<Directory WORKING_DIR>
+<Directory /usr/share/ledgersmb>
   AllowOverride All
   AddHandler cgi-script .pl
   Options ExecCGI Includes FollowSymlinks
@@ -13,22 +13,22 @@
   </Files>
 </Directory>
 
-<Directory WORKING_DIR/users>
+<Directory /usr/share/ledgersmb/users>
   Order Deny,Allow
   Deny from All
 </Directory>
   
-<Directory WORKING_DIR/bin>
+<Directory /usr/share/ledgersmb/bin>
   Order Deny,Allow
   Deny from All
 </Directory>
   
-<Directory WORKING_DIR/utils>
